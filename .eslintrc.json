{
  "parser": "babel-eslint",
  "plugins": ["react", "jest", "promise"],
  "env": {
    "builtin": true,
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "Generator": false,
    "onmessage": true
  },
  "settings": {
    "ecmascript": 6,
    "jsx": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jest/recommended",
    "plugin:promise/recommended"
  ],
  "rules": {
    "no-console": "warn",
    "no-debugger": "warn",
    "no-unused-vars": "warn",
    "jest/no-focused-tests": "warn",
    "promise/avoid-new": 0,
    "promise/no-promise-in-callback": 0
  }
}
